{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-magic-numbers": [
            "error",
            {
                "ignore": [-1, 0, 1],
                "enforceConst": true
            }
        ],
        "max-lines": [
            "warn",
            150
        ],
        "max-params": [
            "warn",
            5
        ],
        "max-statements": [
            "warn",
            20
        ],
        "max-lines-per-function": [
            "warn",
            20
        ],
        "brace-style": [
            "error",
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "block-spacing": [
            "error",
            "always"
        ],
        "func-call-spacing": [
            "error",
            "never"
        ],
        "keyword-spacing": "error",
        "comma-spacing": "error",
        "arrow-spacing": "error",
        "arrow-parens": "error",
        "no-confusing-arrow": "error",
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "no-useless-constructor": "error",
        "no-use-before-define": [
            "error",
            "nofunc"
        ],
        "prefer-const": "error",
        "no-var": "error"
    },
    "parser": "babel-eslint",
    "plugins": [
        "babel"
    ]
}
